pipeline{
    agent any
    environment{
        imagename = "vijendaraws/spring-petclinic"
        registryCredential = "dockerhub_credential_id"
        dockerImage = " "
    }
    stages{
        stage("git"){
            steps {
                git branch: 'main', credentialsId: 'git_credentials_id', url: 'https://github.com/Reddy-hub-sudo/spring-petclinic.git'
            }
        }
        stage("Maven Build Code"){
            steps {
                sh "mvn clean package"
            }
        }
        stage("Docker Build Image"){
            steps{
                script {
                    dockerImage = docker.build imagename
                }
            }
        }
        stage("Image push to hub"){
            steps{
                script {
                    docker.withRegistry( " ", registryCredential ){
                      dockerImage.push("$BUILD_NUMBER")
                     dockerImage.push("latest")  
                    }
                }
            }
        }
    }
}