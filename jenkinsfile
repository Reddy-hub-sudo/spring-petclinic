pipeline{
    agent any
    environment {
        dockerImage = " "
        imagename = "vijendaraws/spring-pet:0.1"
    }
    stages{
        stage("git"){
            steps {
                git branch: 'main', credentialsId: 'git_credentials_id', url: 'https://github.com/Reddy-hub-sudo/spring-petclinic.git'
            }
        }
        stage("Maven Build Code"){
            steps {
                sh "mvn clean package"
            }
        }
        stage("Docker Build Image"){
            steps{
                script {
                    dockerImage = docker.buid imagename
                }
            }
        }
    }
}