pipeline{
    agent any
    environment{
        registryCredential = dockerhub_credential_id
    }
    stages{
        stage("git"){
            steps {
                git branch: 'main', credentialsId: 'git_credentials_id', url: 'https://github.com/Reddy-hub-sudo/spring-petclinic.git'
            }
        }
        stage("Maven Build Code"){
            steps {
                sh "mvn clean package"
            }
        }
        stage("Docker Build Image"){
            steps{
                sh "docker image build -t spring ."
            }
        }
        stage("Docker push"){
            steps{
                sh {
                    docker.withRegistry( " ", registryCredential ){
                        "docker image push spring:latest"
                    }
                }
            }
        }
    }
}