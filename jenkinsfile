pipeline{
    agent any
    triggers {
        cron("0 * * * *")
    }
    stages{
        stage("SCM"){
            steps{
                git branch: 'main', credentialsId: 'git_credentials_id', url: 'https://github.com/Reddy-hub-sudo/spring-petclinic.git'
            }
        }
        stage("BUILD"){
            steps{
                sh "mvn clean package"
            }
        }
        stage("BUILD DOCKER IMAGE"){
            steps{
             sh "docker image build -t spring:1.0 ."   
            }
        }
        stage("push to hub"){
            steps{
                withCredentials([string(credentialsId: 'PASS_ID', variable: 'passwd')]) {
                 sh "docker login -u vijendaraws -p ${passwd}"
                }
                sh "docker push spring:1.0"
                
            }
        }
        stage("POSTBUILD"){
            steps{
                 junit "target/surefire-reports/*.xml"
                 archiveArtifacts "target/*.jar"
            }
        }

    }
}